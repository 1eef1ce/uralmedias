.call
    .call__container.container
        .call__grid
            .call__left
                .call__top
                    .call__title.title-4 Оставьте заявку
                    .call__txt для консультации
                .call__bottom
                    .call__img
                        img(src="img/team/t1.png" alt="")
                    .call__name Константин
                    .call__status Руководитель компании
            .call__right
                form.call__form
                    .call__bloc
                        .form-group
                            .form-group__label Какая услуга Вас интересует?
                            input(type="text" placeholder="Веб").form-group__input
                        .form-group
                            .form-group__label Ваше имя
                            input(type="text" placeholder="Введите имя").form-group__input
                        .form-group
                            .form-group__label Контактный телефон
                            input(type="tel" placeholder="+7 (___) ___-__-__").form-group__input.js-phone-mask
                        .form-group
                            .form-group__label Ваша почта
                            input(type="text" placeholder="Email").form-group__input
                    .form-group
                        .form-group__label Комментарий
                        textarea(rows="3" placeholder="Дополнительная информация").form-group__input

                a(href="#").btn.btn--special
                    .btn__special
                        span Отправить заявку
                    .btn__text Отправить заявку
                .call__quote Нажимая кнопку “Заказать проект”, вы принимаете условия <a href="javascript:void(0);">пользовательского соглашения</a>