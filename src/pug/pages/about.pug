	div(data-barba="container" data-barba-namespace="about")
		.bildboard-data(style="background-image: url(img/dataBild/img1.jpg);")
			.bildboard-data__container.container
				.bildboard-data__title #{setTitle}
	.breadcrumbs
		.breadcrumbs__container.container
				a(href="javascript:void(0);").breadcrumbs__link.link.link--crumbs.link--active Главная
